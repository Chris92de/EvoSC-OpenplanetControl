<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<manialink name="EvoSC:opcontrol-warning" id="opcontrol-warning" version="3">
{include isManiaPlanet() ? 'Components.stylesheet' : 'Components.stylesheet_noblur'}
    <frame id="mainWindow" z-index="10000" scale="1.1">
        <quad class="bg-darker" size="150 100" pos="0 0" opacity="0.9" halign="center" valign="center" z-index="-3" />
        <quad pos="0 40" halign="center" size="22 20" keepratio="Fit" image="https://i.imgur.com/L51DP5I.png" opacity="0.94" />

        {if config('opcontrol.devVersionOnly')}
        <label textsize="4" halign="center" pos="0 19" class="text-light"   text="Openplanet Developer Mode Detected" />
        {else}
        <label textsize="4" halign="center" pos="0 19" class="text-light"   text="Openplanet Detected" />
        {/if}

        <frame pos="0 12.5">
            {if config('opcontrol.devVersionOnly') || empty($allowedSignatureModes = config('opcontrol.modesAllowed', []))}
            <label textsize="1" halign="center" pos="0 0" class="text-lighter" text="Openplanet has been restricted on this server." />
            <label textsize="1" halign="center" pos="0 -8" scale="1.2"  class="text-warning" text="Please disable it to play." />
            {else}
            <label textsize="1" halign="center" pos="0 0" class="text-lighter" text="Openplanet has been restricted on this server" opacity="0.6" />
            <label textsize="1" halign="center" pos="0 -6" scale="1.1" class="text-lighter" text="Please choose one of the allowed signature modes:" />
            <label textsize="1" halign="center" pos="0 -10" scale="1.2"  class="text-warning" text="{implode(', ',$allowedSignatureModes)}" />
            {/if}
        </frame>

        <frame pos="0 -6">
            <quad class="bg-light" size="125 22" pos="0 -11.5" opacity="0.4" halign="center" valign="center" z-index="-2" />
            <quad class="bg-darker" size="124.3 21.5" pos="0 -11.5" opacity="1" halign="center" valign="center" z-index="-1" />
            <quad bgcolor="aaaaaa" size="49 0.2" pos="0 -8" opacity="1" halign="center" valign="center" />

            {if config('opcontrol.devVersionOnly')}
            <label textsize="2" halign="center" pos="0 -4" text="$fffHow to disable Openplanet?" />
            <label textsize="1" halign="center" pos="0 -12" text="$fffIn $cccSettings$fff and under $cccScript engine$fff, make sure"/>
            <label textsize="1" halign="center" pos="0 -16" text="$fff$cccEnable Developer mode on startup$fff is unchecked. Then restart your game." />
            {elseif !empty($allowedSignatureModes)}
            <label textsize="2" halign="center" pos="0 -4" text="$fffSwitch signature mode:" />
            <label textsize="1" halign="center" pos="0 -12" text="$fffIn the Openplanet Menu: Klick $9dfDeveloper$g." />
            <label textsize="1" halign="center" pos="0 -16" text="$fffUnder $9dfSignature Mode$g pick one from the list above." />
            {else}
            <label textsize="2" halign="center" pos="0 -4" text="$fffHow to disable Openplanet?" />
            <label textsize="1" halign="center" pos="0 -12" text="$fffClose the game. Hold $9dfPAUSE$fff and then start the game, keep holding $9dfPAUSE$g." />
            <label textsize="1" halign="center" pos="0 -16" text="$fffWhen you see $cccPlease wait ..$fff or the $cccblack warning screen$fff, release $9dfPAUSE$fff." />
            {/if}
        </frame>

        <frame pos="0 -34">
            {if config('opcontrol.autoKick.enabled') && config('opcontrol.autoKick.delay') > 0}
            <label id="countdowntext" textsize="1" halign="center" class="text-light" textprefix="$i" text="" />
            {elseif config('opcontrol.autoSpec.enabled')}
            <label textsize="1" halign="center" class="text-light" text="You have been restricted to spectator only." />
            {/if}
            <label class="btn-danger disconnect" pos="0 -8" size="25 6" ScriptEvents="1" text="ï‚‹ Disconnect" textsize="1.2" />
        </frame>
    </frame>

    <script><!--
    #Include "MathLib" as ML
    #Include "TextLib" as TL

    Void updateCountdownText(Integer value) {
        declare countdownText <=> (Page.MainFrame.GetFirstChild("countdowntext") as CMlLabel);
        declare plural = "s";
        if (value == 1) {
            plural = "";
        }

        if (value < 1) {
            countdownText.SetText("You are about to be kicked.");
        } else {
            countdownText.SetText("You will be automatically kicked in " ^ value ^ " second" ^ plural ^ ".");
        }
    }

    main() {
        declare Integer countdown = {config('opcontrol.autoKick.delay')};
        declare lastUpdate = Now;

        updateCountdownText(countdown);

        while(True) {
            yield;

            if (Now - lastUpdate > 1000 && countdown > 0) {
                countdown -= 1;
                lastUpdate = Now;

                updateCountdownText(countdown);
            }

            foreach(event in PendingEvents) {
                if (event.Type == CMlScriptEvent::Type::MouseClick) {
                    if (event.Control.HasClass("disconnect")) {
                        TriggerPageAction("opcontrol.disconnect");
                    }
                }
            }
        }
    }

    --></script>
</manialink>
